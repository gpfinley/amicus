<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
    <name>Ensembles UIMA Type System</name>
    <description>The UIMA storage types for the Ensembles system.</description>
    <version>${project.version}</version>
    <vendor>${project.organization.name}</vendor>
    <types>

        <typeDescription>
            <name>edu.umn.ensembles.DocumentID</name>
            <description>
                Document identifier based on filename.
            </description>
            <supertypeName>uima.cas.TOP</supertypeName>
            <features>
                <featureDescription>
                    <name>documentID</name>
                    <rangeTypeName>uima.cas.String</rangeTypeName>
                </featureDescription>
            </features>
        </typeDescription>

        <typeDescription>
            <name>edu.umn.ensembles.SingleFieldAnnotation</name>
            <description>
                Generic annotation with a single text field. Could serve as temporary or summary annotation.
            </description>
            <supertypeName>uima.tcas.Annotation</supertypeName>
            <features>
                <featureDescription>
                    <name>field</name>
                    <rangeTypeName>uima.cas.String</rangeTypeName>
                </featureDescription>
            </features>
        </typeDescription>

        <typeDescription>
            <name>edu.umn.ensembles.EvalAnnotation</name>
            <description>
                Type for storing results of hit-miss evaluations, with optional score (Double)
            </description>
            <supertypeName>uima.tcas.Annotation</supertypeName>
            <features>
                <featureDescription>
                    <name>systemIndex</name>
                    <rangeTypeName>uima.cas.Integer</rangeTypeName>
                </featureDescription>
                <featureDescription>
                    <name>status</name>
                    <rangeTypeName>edu.umn.ensembles.EvalMatchStatus</rangeTypeName>
                </featureDescription>
                <featureDescription>
                    <name>score</name>
                    <rangeTypeName>uima.cas.Double</rangeTypeName>
                </featureDescription>
            </features>
        </typeDescription>

        <typeDescription>
            <name>edu.umn.ensembles.EvalMatchStatus</name>
            <description>....</description>
            <supertypeName>uima.cas.String</supertypeName>
            <allowedValues>
                <value>
                    <string>TruePositive</string>
                    <description>True positive.</description>
                </value>
                <value>
                    <string>FalsePositive</string>
                    <description>False positive.</description>
                </value>
                <value>
                    <string>FalseNegative</string>
                    <description>False negative.</description>
                </value>
            </allowedValues>
        </typeDescription>

    </types>
</typeSystemDescription>
